block globalsVars
  -
    const siteName = 'My Site';
    const siteUrl = 'https://www.google.com';
    const themeColor = '#2F3BA2';

block canonicalUrl
  - const canonicalUrl = siteUrl;

block metaVars
  -
    const meta = {
      pageTitle: 'My Fun Page Name',
      description: 'My site description.',
      image: 'http://ghk.h-cdn.co/assets/16/09/980x490/landscape-1457107485-gettyimages-512366437.jpg'
    };

doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{siteName} | #{meta.pageTitle}
    meta(content=meta.pageTitle, property='og:title')
    meta(content=siteName, property='og:site_name')
    meta(content=meta.description, property='og:description')
    meta(content=meta.image, property='og:image')
    meta(content=canonicalUrl, property='og:url')
    link(rel='canonical', href=canonicalUrl)

    // Disable tap highlight on IE
    meta(name='msapplication-tap-highlight', content='no')

    // Web Application Manifest
    link(rel='manifest', href='/manifest.json')

    // Add to homescreen for Chrome on Android
    meta(name='mobile-web-app-capable', content='yes')
    meta(name='application-name', content=siteName)
    link(rel='icon', sizes='192x192', href='/images/touch/chrome-touch-icon-192x192.png')

    // Add to homescreen for Safari on iOS
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style' content='black')
    meta(name='apple-mobile-web-app-title', content=siteName)
    link(rel='apple-touch-icon', href='/images/touch/apple-touch-icon.png')

    // Tile icon for Win8 (144x144 + tile color)
    meta(name='msapplication-TileImage', content='/images/touch/ms-touch-icon-144x144-precomposed.png')
    meta(name='msapplication-TileColor', content=themeColor)

    // Color the status bar on mobile devices
    meta(name='theme-color', content=themeColor)

    // Stylesheets
    link(href='/styles/main.css', rel='stylesheet')

  body(class=bodyClass)
    #svg-sprites(style='display:none;')
      include /_includes/svg-sprites.svg
    header
      block header
    main#content.main-content
      block content
    footer
      block footer
    block postcontent
    script(src='/scripts/main.min.js')

